{% extends 'base.html.twig' %}

{% block body %}
    <h1></h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ .id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ .type }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ .name }}</td>
            </tr>
            <tr>
                <th>Share</th>
                <td>{{ .share }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ .owner }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ .status }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ .version }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ .icon }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ .notes }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('s_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('s_edit', { 'id': .id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
